{require_otp_vsn, "R15|R16|17"}.

{eunit_opts, [verbose]}.

{cover_enabled, true}.

{erl_opts, [
  debug_info,
  warn_export_all,
  warn_obsolete_guard,
  warn_unused_import,
  warn_unused_vars,
  warn_shadow_vars,  
  warnings_as_errors
]}.

{clean_files, ["test/*.beam"]}.

{deps, [
    {ct_refresh,    ".*", {git, "https://github.com/konrads/ct_refresh.git", {branch, "master"}}},
    {proper, ".*", {git, "git://github.com/manopapad/proper.git", {branch, "master"}}}
    ]}.

{ct_extra_params, "-event_handler ct_refresh_events"}.
